<resources>

    <!-- Light / Regular style fonts -->
    <java-symbol type="string" name="config_lightFontFamily" />
    <java-symbol type="string" name="config_regularFontFamily" />
    
    <!-- Pocket mode -->
    <java-symbol type="layout" name="pocket_mode_layout" />
    <java-symbol type="drawable" name="prevent_mode_img" />
    <java-symbol type="id" name="pocket_mode_phone_image" />
    <java-symbol type="id" name="pocket_mode_active_message" />
    <java-symbol type="id" name="pocket_mode_hint_message" />
    <java-symbol type="string" name="pocket_mode_active" />
    <java-symbol type="string" name="pocket_mode_hint" />

   <!-- Settings Restart -->
    <java-symbol type="string" name="settings_restart_title" />
    <java-symbol type="string" name="settings_restart_message" />
    <!-- Soft restart dialog -->
    <java-symbol type="string" name="system_restart_title" />
    <java-symbol type="string" name="system_restart_message" />
    <!-- SystemUI restart dialog -->
    <java-symbol type="string" name="systemui_restart_title" />
    <java-symbol type="string" name="systemui_restart_message" />
    <!-- Launcher restart dialog -->
    <java-symbol type="string" name="launcher_restart_title" />
    <java-symbol type="string" name="launcher_restart_message" />
    
    <!-- Whether devices suports in-display fingerprint when screen is off -->
    <java-symbol type="bool" name="config_supportScreenOffUdfps" />
    
    <!-- Default line spacing multiplier between hours and minutes of the keyguard clock-->
    <java-symbol type="dimen" format="float" name="keyguard_clock_line_spacing_scale" />
    
    <!-- Custom clocks -->
    <java-symbol type="dimen" format="float" name="presentation_clock_text_size" />
    <java-symbol type="dimen" format="float" name="large_clock_text_size" />
    <java-symbol type="dimen" format="float" name="small_clock_text_size" />
    
    <!-- Define device configs on boot -->
    <java-symbol type="array" name="global_device_configs_override" />
    <java-symbol type="array" name="device_configs_override" />
    
    <!-- StatusBarUtils default values -->
    <java-symbol type="dimen" name="status_bar_padding_start" />
    <java-symbol type="dimen" name="status_bar_padding_end" />
    <java-symbol type="dimen" name="status_bar_padding_top" />
    
    <!-- App lock -->
    <java-symbol type="string" name="unlock_application" />
    <java-symbol type="array" name="config_appLockAllowedSystemApps" />
    
    <!-- Whether to cancel fingerprint operation if not idle -->
    <java-symbol type="bool" name="config_fpCancelIfNotIdle" />
    
    <!-- Immersive UI mode toast messages -->
    <java-symbol type="string" name="immersive_ui_mode_notify_locked" />
    
    <!-- Whether the device supports Smart Pixels -->
    <java-symbol type="bool" name="config_supportSmartPixels" />

    <!-- Whether to force enable multi resolution configuration for camera -->
    <java-symbol type="bool" name="config_forceMultiResolution" />
</resources>
